@page
@model ServerRoomMonitoringApp.Web.Pages.SensorMessages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@using (Html.BeginForm(actionName: "Reload", "SensorMessages", method: FormMethod.Post))
{
    <input type="submit" value="Odśwież" />
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SensorMessage[0].SensorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorMessage[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorMessage[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorMessage[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SensorMessage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SensorType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

            </tr>
        }
    </tbody>
</table>
